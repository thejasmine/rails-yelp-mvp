<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5), hint: "Please rate the restaurant from 0 to 5" %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back to Detail', restaurant_path(@restaurant.id) %>